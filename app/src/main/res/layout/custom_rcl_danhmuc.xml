<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"

    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
       <ImageView
           android:id="@+id/anhchuongtrinh"
           android:layout_width="150dp"
           android:layout_height="150dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/tenchuongtrinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#ED0D0D"
                android:text="Tên chương trình tập"
                android:paddingLeft="10dp"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_lich"/>
                    <TextView
                        android:id="@+id/sotuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Tuần"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_tg"/>
                    <TextView
                        android:id="@+id/sophut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90 Phút"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>